{
  "manifest_version": 3,
  "name": "Agora",
  "version": "1",
  "permissions": [
    "sidePanel","tabs","activeTab","scripting"
  ],
  "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["content.js", "bootstrap.min.js", "jquery-3.4.1.min.js"],
     "css": ["style.css", "bootstrap.min.css"]
   }
  ],
  "externally_connectable": {
    "matches": ["https://www.youtube.googleapis.com/*"]
  },
  "side_panel": {
    "default_path": "sidepanel_html/article.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Click to open panel"
  }
}